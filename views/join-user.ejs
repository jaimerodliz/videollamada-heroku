<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/alertify.min.css" />
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/04199e8328.js" crossorigin="anonymous"></script>
    <script src="/js/alertify.min.js"></script>
    <title>Ingresar a sala</title>

</head>
<body class="body_color">
    <div class="contenedor-formulario">
            <h1>Unirse a videollamada</h1>
        <form action="" class="caja-form">
            <div class="form-group">
                <label for="inp_user_name">Usuario:</label>
                <input type="text" id="inp_user_name" name="inp_user_name" class="form-control" placeholder="Nombre de usuario">
            </div>
            <div class="form-group">
                <label for="inp_codigo">Código:</label>
                <input type="text" class="form-control" id="inp_codigo" aria-describedby="inp_codigo" placeholder="Ingrese el código de la sala que quiera ingresar" >
            </div>
            <button type="button" class="btn btn-primary btn-lg right" onclick="conectVideo()" >Conectar</button>
        </form>
    </div>
</body>

<script>
    const disponible = "<%= disponible %>";
    if(disponible=='0'){
        alertify.alert('Videollamada', 'Sala de video no disponible', function(){
            window.location.href = "/user";
        });
    }

    const conectVideo = () =>{
        if($("#inp_codigo").val().trim() != "" && $("#inp_user_name").val().trim() != ""){
            if($("#inp_codigo").val().trim().length == 36){
                window.location.href = "/user/"+$("#inp_codigo").val().trim()+"&"+$("#inp_user_name").val().trim();
            }else{
                alertify.error("Código incorrecto");
            }
        }else{
            alertify.error("No deje campos vacíos")
        }
        
    }
</script>
</html>